{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
   /* Esta linha é a chave: diz ao TypeScript para olhar na sua pasta @types */
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": ["src/**/*.ts"],
  "files": [
    /* Força o compilador a incluir este arquivo de definição de tipos */
    "src/@types/express/index.d.ts"
  ]
}
